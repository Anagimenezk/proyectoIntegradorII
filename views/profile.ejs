<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%-include("./partials/head.ejs")%>
<!-- Header -->
<%-include("./partials/header.ejs")%>
<!-- /Header -->

<body>

	

	<!-- Datos del usuario -->
	<section class="info-usuario container ">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src= " <%= usuario.image %> " alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">

					<h1 class="main-title"> <%= usuario.nombre + " " + usuario.apellido %> </h1>
					<!--on click que cami-bie a "siguiendo"-->
				
					
				</div>
			<!-- CORROBORAR QUE ANDE BIEN -->
			<% if (logueado && userId == usuario.id) { %> 
				<form  action="/profile-edit" method="GET">
					<input type="hidden" name="id" value="<%- usuario.id %>" >
					<button class="btn mt-3 ml-4" type="submit" > EDITAR PERFIL </button>
				</form>
				<% } %> 
				<!--<a class="editar-perfil" href="/profile-edit">Editar perfil</a>-->
				<div>
					<ul class="el-usuario">
						<li class="infoUsuario"> Fecha de nacimiento: <%= usuario.fecha %></li>
						<li class="infoUsuario"> Comentarios: <%=usuario.comentarios.length %></li>
						<li class="infoUsuario"> Productos: <%=usuario.productos.length %></li>

					
					</ul>
				</div>
				<div>

				</div>

			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"> Sus Restaurantes </h2>
			</div>
			
		
			
		
			
			<% usuario.productos.forEach(element=> { %> 

				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= element.id%> ">
							<figure class="product-box_image">
								<img src="<%= element.image %>" alt="">
							</figure>
							<article class="product-box_data">
								<h2><%= element.nombre %></h2>
								<p><%= element.descripcion %></p>
								<p>Comentarios: 4 </p>
							</article>
						</a>
					</section>
				</div>
	
				<% }) %> 

		<!--<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product">
						<figure class="product-box_image">
							<img src="/images/products/alos.jpg" alt="Tegui">
						</figure>
						<article class="product-box_data">
							<h2>Alo's Bistro</h2>
							<p>Experiencia de sabores</p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>-->
		
			


			
			
			
			
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%-include("./partials/footer.ejs")%>
	<!-- /footer -->
</body>	
</html>