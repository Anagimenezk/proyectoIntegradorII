<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%-include("./partials/head.ejs")%>

<body>

	<!-- Header -->
	<%-include("./partials/headerLogueado.ejs")%>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/cala-perfil.jpg" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">

					<h1 class="main-title"> Cala Ruggeri</h1>
		
					<a href='/allProducts/:id' class="btn mt-3 ml-4" href="">SEGUIR</a>
					
				</div>
				<a class="editar-perfil" href="/profile-edit">Editar perfil</a>
				<div>
					<ul class="el-usuario">
						<li class="infoUsuario">8 productos</li>
						<li class="infoUsuario">200 seguidores</li>
						<li class="infoUsuario">300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Restaurantes favoritos</h2>
			</div>
			
			
			<!-- Show mis productos -->

			<% for (let i = 8; i < 12; i++) { %> 

				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= productos[i].id %> ">
							<figure class="product-box_image">
								<img src="<%= productos[i].imagen %>" alt="">
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].nombre %></h2>
								<p><%= productos[i].descripcion %></p>
								<p>Comentarios: 4 </p>
							</article>
						</a>
					</section>
				</div>
	
				<% } %> 

