<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%-include("./partials/head.ejs")%>

<body>

	<!-- Header -->
	<%-include("./partials/header.ejs")%>
	<!-- /Header -->

<div class="seccionprincipal"> 
	
	
			<!-- product detail  -->

	<div class="container products-wrapper">

		<div class="d-flex align-items-center">
			<h2 class="products-title">
				<%= productos[idSearch-1].nombre %></h2> 
			<p class="product-detail-description">
				<a href="/add">Agregar Producto</a>
			</p>
		</div>

		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= productos[idSearch-1].imagen %> " alt="" class="product-detail-img">
					<p class="product-detail-description"> <%= productos[idSearch].descripcion %>  </p>
				</article>

				<div class="col-12 col-lg-4">
					<section class="comments">

					<% for (let i = 0; i < productos[idSearch-1].comentarios.length; i++ ) { %> 
						<article>
							<div class="icono-usuario-comentario">
								<i class="far fa-user"></i>
							</div>
							<div class="data">
							<p class="user">
								<strong> <a href="/profile"> <%= productos[idSearch-1].comentarios[i].usuario %> </a> </strong>
								<%= productos[idSearch-1].comentarios[i].comentario %>
							</p>
							</div>
						</article>
						<% } %> 

					

					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	
	<!-- /product detail  -->

	
	</div>
	<!-- footer -->
	<%-include("./partials/footer.ejs")%>
	<!-- /footer -->

</body>	
</html>
